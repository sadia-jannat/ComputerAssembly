<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#a0ddec"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/usernamelistid"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
      android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#8e081e"
        android:hint="Enter Your Name"
        android:textSize="40dp"
        android:layout_height="60dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/spnerlistid"
        android:layout_marginBottom="5dp"
      android:textColor="#070456"
        android:hint="Enter Your Name"
        android:layout_height="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/brandlistid"
        android:textColor="#070456"
        android:layout_marginBottom="5dp"

        android:hint="Enter Your Name"
        android:layout_height="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/quantitylistid"
        android:textColor="#070456"
        android:layout_marginBottom="5dp"

        android:hint="Enter Your Name"
        android:layout_height="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="#070456"
        android:id="@+id/phonlistid"
        android:layout_marginBottom="5dp"

        android:hint="Enter Your Name"
        android:layout_height="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/addresslistid"
        android:layout_marginBottom="5dp"
        android:textColor="#070456"

        android:hint="Enter Your Name"
        android:layout_height="50dp" />

</LinearLayout>