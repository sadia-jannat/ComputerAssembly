<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:background="@drawable/resback"
    tools:context="com.example.user.computerassembly.OrderProductActivity">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/usernameid"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:hint="Enter Your Name"
        android:layout_height="50dp" />


    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spnerid"
        android:entries="@array/genres"
        android:layout_height="50dp">

    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/brandid"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:hint="Enter Product's brand"
        android:layout_height="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/productquantityid"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:hint="Enter Product Quentity"
        android:layout_height="50dp" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/phonenumid"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:hint="Enter Phone Number or Email Address"
        android:layout_height="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/addressnameid"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:hint="Enter Your Address"
        android:layout_height="50dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="order"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/orderbuttonid"
        />

</LinearLayout>
